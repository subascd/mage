<?xml version="1.0"?>
<config>
	<tabs>
        <imedia translate="label" module="imedia_productinquiry">
			<label>Imedia Extentions</label>
            <sort_order>10</sort_order>
        </imedia>
    </tabs>
	
	<sections>
		<inquiry translate="label" module="imedia_productinquiry">
			<label>Product Inquiry</label>
			<tab>imedia</tab>
			<frontend_type>text</frontend_type>
			<sort_order>10</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
      
			<groups>
				<product translate="label">
				   <label>Product Inquiry</label>
				   <frontend_type>text</frontend_type>
				   <sort_order>1</sort_order>
				   <show_in_default>1</show_in_default>
				   <show_in_website>1</show_in_website>
				   <show_in_store>1</show_in_store>  
				   <fields>
						<is_active translate="label">
							<label>Enable</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<comment>set yes to display product inquiry in product page</comment>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</is_active>
						<first_heading translate="label">
							<label>Heading 1</label>
							<frontend_type>text</frontend_type>
							<comment>change frequently asked questions heading</comment>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</first_heading>		
						<second_heading translate="label">
							<label>Heading 2</label>
							<frontend_type>text</frontend_type>
							<comment>change do you have any question heading</comment>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</second_heading>
						<template>
							<label>Email Template to Customer</label>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<sort_order>4</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_template</source_model>
						</template>						
				   </fields>
				</product>			
			</groups>           
      </inquiry>
   </sections>
</config>